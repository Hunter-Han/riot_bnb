<body class=riot-image>

</div>
  <div class='container-new margin-top margin-bottom' >
    <h1> Who's your rioter...</h1>
    <br>
    <%= simple_form_for [@rioter] do |f| %>
      <% if @rioter.errors.any? %>
        <div class="errors-container">
          <ul>
            <% @rioters.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-row">
          <div class="col-xs-6">
             <%= f.input :name, placeholder: "Alan the Anarchist" %>
          </div>
          <div class="col-xs-6">
            <%= f.input :rate, label: "Hourly rate" %>
          </div>
        </div>
        <div class="form-group">
          <label class="control-label check_boxes optional">Skills</label>
          <!-- <input type="hidden" name="post[skill_ids][]" value=""> -->
          <div class="skill-choices">
            <% Skill.all.each do |skill| %>
            <input type="checkbox" hidden value="<%= skill.id %>" name="post[skill_ids][]" id="skill_ids_<%= skill.id %>">
            <label class='skill-choice' for="skill_ids_<%= skill.id %>">
              <%= skill.name %>
            </label>
            <% end %>
          </div>
        </div>

      <%= f.input :description, placeholder: "Family man..."%>
        <div class = 'form-button-box'>
          <%= f.input :picture %>
          <%= f.submit "LET'S RIOT", class: "form-submit-button" %>
      </div>
    <% end %>
  </div>
</div>

</body>
